<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBackColor"
    android:id="@+id/rootView"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="397dp"
        android:layout_height="188dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textAlignment="center"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="370dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/answer_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Barack Obama"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@color/myBlack"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/answer_option1"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="287dp"
        android:background="@drawable/option_answer_background"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/answer_option2"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="205dp"
        android:background="@drawable/option_answer_background"
        android:gravity="center"
        android:text="Barack Obama"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/answer_option3"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="121dp"
        android:background="@drawable/option_answer_background"
        android:gravity="center"
        android:text="Richard Nixon"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/eye_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_eye_view" />
    <ImageView
        android:id="@+id/eye_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_eye_hide"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/my_add_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="14dp"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_add_icon" />

</RelativeLayout>